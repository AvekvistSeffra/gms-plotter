/// @description Initialise the Grid

// Gridline positions
gridline_horizontal = room_height / 2;
gridline_vertical = room_width / 2;
gridline_width = 2;

// The scaling of the axes. 
grid_xscale = 1;
grid_yscale = 1;

new_grid_xscale = 1;
new_grid_yscale = 1;

// Pixel scaling for the grid
pixel_scale = 64;

// These control what is currently rendered. 
division_grids = true;
axis_labels = true;
labels = true;
axes = true;
polar = false;
bounding_box = false;
x_axis = true;
y_axis = true;
mouse_coords = true;
plots = true;

// The scaling of the sub-grids
subgrid_xscale = 1;
subgrid_yscale = 1;
subgridline_width = 1;

// Labels
x_label = "x";
y_label = "y";
